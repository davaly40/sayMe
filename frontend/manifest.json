{
  "name": "SayMe",
  "short_name": "SayMe",
  "description": "Glasovni asistent na hrvatskom jeziku",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#000000",
  "orientation": "portrait",
  "icons": [
    {
      "src": "assets/logo.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ],
  "permissions": [
    "camera",
    "alarm",
    "notifications"
  ],
  "queries": {
    "intents": [
      {
        "action": "android.media.action.IMAGE_CAPTURE"
      },
      {
        "action": "android.intent.action.SET_ALARM"
      }
    ]
  },
  "android": {
    "package": "com.android.camera",
    "alarm_package": "com.android.deskclock",
    "permissions": [
      "android.permission.CAMERA",
      "android.permission.SET_ALARM"
    ]
  },
  "ios": {
    "camera_usage_description": "SayMe treba pristup kameri za slikanje.",
    "urls": ["clockapp://", "camera://"]
  },
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://your-app-url.com/manifest.json"
    },
    {
      "platform": "play",
      "url": "market://details?id=com.android.deskclock",
      "id": "com.android.deskclock"
    }
  ]
}
